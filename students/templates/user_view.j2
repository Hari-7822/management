{% extends './base.j2' %}

{% block content %}
    <title>User Detail</title>
    <h1>{{ user.username }}</h1>
    <p>Email: {{ user.email }}</p>
    <p>First Name: {{ user.first_name }}</p>
    <p>Last Name: {{ user.last_name }}</p>
    <p>Role: {% if user.is_superuser == True and user.is_staff == True %}Admin{% else %}User{% endif %}</p>

{% endblock %}