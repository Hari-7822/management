{% extends './base.j2' %}

{% block title %}
    Login
{% endblock %}

{% load crispy_forms_tags %}
{% load static %}

{% block content %}
<div class="form">
    <h2 class="form__header">Login</h2>
    <form method="POST" class="form__form container form-group">
        {% csrf_token %}
        {{ form|crispy }}
        <div class="form__footer">
            <button class="btn btn-primary form__footer--btn btn-submit" type="submit">
                Login
            </button>
            <p class="form__footer--text">
                Don't have an account 
                <a class="form__footer--link" href="{% url 'user_register' %}">SignUp</a>
            </p>
        </div>
    </form>
</div>
{% endblock %}
