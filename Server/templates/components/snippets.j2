{% macro dynamic_table(table_name, api_url, model_instance, link_field=None, link_url_pattern=None, refresh_interval=5000) %}
{% load tags %}

<div class="container-fluid mt-4">
    <div class="row">
        <div class="col-12">
            <div class="card mb-4 shadow-sm">
                <div class="card-body">
                    <h2 class="text-primary">
                        <i class="fas fa-user-circle"></i> {{ request.user.username }}
                    </h2>
                </div>
            </div>

            <div class="card shadow-sm">
                <div class="card-header bg-primary text-white">
                    <h5 class="mb-0">{{ table_name }}</h5>
                </div>
                <div class="card-body p-0">
                    <div class="table-responsive">
                        <table class="table table-striped table-hover table-bordered mb-0">
                            <thead class="thead-dark">
                                <tr>
                                    {% for field_name in model_instance|get_fields %}
                                    <th>{{ field_name }}</th>
                                    {% endfor %}
                                </tr>
                            </thead>
                            <tbody id="data-container-{{ table_name|slugify }}">
                                <tr>
                                    <td colspan="{{ model_instance|get_fields|length }}" class="text-center">
                                        <div class="spinner-border text-primary" role="status">
                                            <span class="sr-only">Loading...</span>
                                        </div>
                                    </td>
                                </tr>
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<script type="text/javascript">
    $(document).ready(function() {
        var fieldNames_{{ table_name|slugify }} = [{% for field in model_instance|get_fields %}'{{ field }}'{% if not forloop.last %},{% endif %}{% endfor %}];
        var containerId = '#data-container-{{ table_name|slugify }}';
        var apiUrl = '{{ api_url }}';
        var linkField = {{ link_field|tojson if link_field else 'null' }};
        var linkUrlPattern = {{ link_url_pattern|tojson if link_url_pattern else 'null' }};
        
        function fetchData() {
            $.ajax({
                url: apiUrl,
                method: 'GET',
                success: function(data) {
                    let html = '';
                    
                    if (data.length === 0) {
                        html = '<tr><td colspan="' + fieldNames_{{ table_name|slugify }}.length + '" class="text-center text-muted">No records found</td></tr>';
                    } else {
                        data.forEach(function(item) {
                            html += '<tr>';
                            
                            fieldNames_{{ table_name|slugify }}.forEach(function(field) {
                                let value = item[field];
                                
                                if (value === null || value === undefined) {
                                    html += '<td>-</td>';
                                } else if (typeof value === 'boolean') {
                                    html += '<td>' + (value ? '<span class="badge badge-success">Yes</span>' : '<span class="badge badge-secondary">No</span>') + '</td>';
                                } else if (linkField && field === linkField && linkUrlPattern) {
                                    var url = linkUrlPattern.replace('{value}', value);
                                    html += '<td><a href="' + url + '" target="_blank" class="btn btn-sm btn-link">' + value + '</a></td>';
                                } else {
                                    html += '<td>' + value + '</td>';
                                }
                            });
                            
                            html += '</tr>';
                        });
                    }
                    
                    $(containerId).html(html);
                },
                error: function(error) {
                    $(containerId).html('<tr><td colspan="' + fieldNames_{{ table_name|slugify }}.length + '" class="text-center text-danger">Error: ' + error.statusText + '</td></tr>');
                }
            });
        }

        fetchData();
        {% if refresh_interval %}
        setInterval(fetchData, {{ refresh_interval }});
        {% endif %}
    });
</script>
{% endmacro %}
