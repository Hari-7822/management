    {% extends 'base.j2' %}

    {% block content %}

    {% load static %}

    {% load tags %}

    {% if request.user.is_authenticated %}

    <div class="container-fluid mt-4">
        <div class="row">
            <div class="col-12">
                <div class="card mb-4 shadow-sm">
                    <div class="card-body">
                        <h2 class="text-primary">
                            <i class="fas fa-graduation-cap"></i> Student Database
                        </h2>
                    </div>
                </div>

                <div class="card shadow-sm">
                    <div class="card-header bg-primary text-white">
                        <h5 class="mb-0">All Students</h5>
                    </div>
                    <div class="card-body p-0">
                        <div class="table-responsive">
                            <table class="table table-striped table-hover table-bordered mb-0">
                                <thead class="thead-dark">
                                    <tr>
                                        {% for field_name in student|get_fields %}
                                        <th>{{ field_name }}</th>
                                        {% endfor %}
                                    </tr>
                                </thead>
                                <tbody id="data-container">
                                    <tr>
                                        <td colspan="{{ student|get_fields|length }}" class="text-center">
                                            <div class="spinner-border text-primary" role="status">
                                                <span class="sr-only">Loading...</span>
                                            </div>
                                        </td>
                                    </tr>
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <script type="text/javascript">
        $(document).ready(function() {
            var fieldNames = [{% for field in student|get_fields %}'{{ field }}'{% if not forloop.last %},{% endif %}{% endfor %}];
            
            function fetchData() {
                $.ajax({
                    url: 'http://192.168.29.240:8000/api/students/',
                    method: 'GET',
                    success: function(data) {
                        let html = '';
                        
                        if (data.length === 0) {
                            html = '<tr><td colspan="' + fieldNames.length + '" class="text-center text-muted">No students found</td></tr>';
                        } else {
                            data.forEach(function(item) {
                                html += '<tr>';
                                
                                fieldNames.forEach(function(field) {
                                    let value = item[field];
                                    
                                    if (value === null || value === undefined) {
                                        html += '<td>-</td>';
                                    } else if (typeof value === 'boolean') {
                                        html += '<td>' + (value ? '<span class="badge badge-success">Yes</span>' : '<span class="badge badge-secondary">No</span>') + '</td>';
                                    } else if (field === 'roll_number') {
                                        html += '<td><a href="student/' + value + '" target="_blank" class="btn btn-sm btn-link">' + value + '</a></td>';
                                    } else {
                                        html += '<td>' + value + '</td>';
                                    }
                                });
                                
                                html += '</tr>';
                            });
                        }
                        
                        $('#data-container').html(html);
                    },
                    error: function(error) {
                        $('#data-container').html('<tr><td colspan="' + fieldNames.length + '" class="text-center text-danger">Error: ' + error.statusText + '</td></tr>');
                    }
                });
            }

            fetchData();
            setInterval(fetchData, 5000);
        });
    </script>

    {% else %}
    <div class="container mt-5">
        <div class="alert alert-warning text-center" role="alert">
            <h4 class="alert-heading">Authentication Required</h4>
            <p>You need to be logged in to access this page.</p>
            <hr>
            <p class="mb-0">
                <a href="{% url 'user_login' %}" class="btn btn-primary">Login</a>
                <a href="{% url 'user_register' %}" class="btn btn-success">Sign Up</a>
            </p>
        </div>
    </div>
    {% endif %}

    {% endblock %}
